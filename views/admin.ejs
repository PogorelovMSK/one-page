<style type="text/css">
	.CodeMirror {
		border: 1px solid #ddd;
		border-radius: 4px;
		width:100%;
		font-family: Monaco, Menlo,"Andale Mono","lucida console","Courier New",monospace !important;
		font-size: 85%;
	}
</style>


<script>
$(document).ready(function() {

	// make server JSON accessible to client
	var templatesList=<%-JSON.stringify(templates._docs)%>;
	
	//$('.CodeMirror').addClass("span8");
	
	$('.select-template').click(function(){
		console.log('selected..'+$(this).text());
		window.location.href='/admin/templates/'+$(this).text()+'#templates';
		return false;
	});
	
	$('.load-template').click(function(){
		var t = $(this).text();
		var prevTextarea = $(this).parents('.controls').find('textarea');
		
		if (prevTextarea.val().length > 0) {
			if (confirm('Are you sure you want to overwrite the content?')) {
				eval(prevTextarea.attr("id")+".setValue(templatesList[t].template)");
			}
		}
		else {
			prevTextarea.val(templatesList[t].template);
			eval(prevTextarea.attr("id")+".setValue(templatesList[t].template)");
		}
		
		$(this).parents('.btn-group').removeClass('open'); // hide dropdown
		return false;
	});
	
	$('#deleteTemplate').click(function(){
		var id = $(this).parents('.controls').find('form').attr("action");
		if (confirm('Are you sure you want to delete this template?')) {
			$.ajax({
			  type: 'delete', 
			  url: id,
			  success: function(msg){ 
				alert("success");    
			  },
			  error: function(msg){
				alert("error:" + msg);
			  }
			});     
		}
		return false;
	});
	
	$('.btnDel').click(function(){
		var f=$(this).parents("form:first"),
			action=f.attr("action"),
			id=f.find("#inputSection").val();
		
		//console.log(id);
		if (confirm('Are you sure?')){
			$.ajax({
			  type: 'delete', 
			  url: action,
			  success: function(msg){ 
				f.remove();
				$('#menu'+id).remove();
				showAlert("Success: "+msg);
			  },
			  error: function(msg){
				alert("error:" + msg);
			  }
			});   
		}
		return false;
	})
	
	$('.btnSave').click(function(){
		var form = $(this).parents("form:first");
		var formAction = $(this).parents("form:first").attr("action");
		//console.log(formAction);
		
		//copy the CodeMirror contents to textarea
		var prevTextarea = $(this).parents('form').find('textarea');
		eval(prevTextarea.attr("id")+".save()");
		
		$.ajax({
			type: 'post',
			data: form.serialize(),
			url: formAction,
			success:function(msg){ 
				showAlert("Success: " + msg);    
			},
			error: function(msg){
				alert("Error: " + msg);
			}
		}); 
		return false;
	})
	
});
</script>

