					<ul class="dropdown-menu">
						<% templates.forEach( function( k,v ){ %>
							<li><a href='#' class='load-template'><%= k %></a></li>
						<% }) %>
					</ul>
				</div>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
